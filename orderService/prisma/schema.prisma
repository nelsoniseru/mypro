generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  RECEIVED
}

// Update the Order model to include the status field
model Order {
  id        Int         @id @default(autoincrement())
  item      String
  quantity  Int
  price     Float
  status    OrderStatus @default(PENDING) 
  deletedAt DateTime?   
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}